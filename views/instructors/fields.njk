<div class="item">
    <div>URL do Avatar</div>
    <div>
        <input value="{{ instructor.avatar_url }}" type="url" name="avatar_url" placeholder="http://">
    </div>
</div>

<div class="item">
    <div>Instrutor</div>
    <div>
        <input value="{{instructor.name}}" type="text" name="name" placeholder="Nome do Instrutor">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input value="{{instructor.birth}}" type="date" name="birth">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span><input 
            type="radio" 
            name="gender" 
            value="M" 
            {% if instructor.gender == 'M' %} 
                checked 
            {% endif %}>Masculino
        </span>
        <span><input 
            type="radio" 
            name="gender" 
            value="F"
            {% if instructor.gender == 'F' %} 
                checked 
            {% endif %}>Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input value="{{instructor.services}}" type="text" name="services" placeholder="Separe os serviços prestados por vírgula">
    </div>
</div>

<button type="submit">Salvar</button>